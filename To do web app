<body>
  <div class="container">
    <h2>To-Do List</h2>
    <input type="text" id="taskInput" placeholder="Enter task...">
    <input type="datetime-local" id="taskDateTime">
    <button onclick="addTask()">Add Task</button>

    <ul id="taskList"></ul>
  </div>

  <script>
    function addTask() {
      let taskInput = document.getElementById("taskInput");
      let taskDateTime = document.getElementById("taskDateTime");
      let taskList = document.getElementById("taskList");

      if (taskInput.value === "") {
        alert("Please enter a task!");
        return;
      }

      let li = document.createElement("li");
      let taskText = document.createElement("span");
      taskText.innerHTML = `${taskInput.value} <br><small>${taskDateTime.value}</small>`;

      li.appendChild(taskText);

      let btnDiv = document.createElement("div");
      btnDiv.classList.add("task-buttons");

      let completeBtn = document.createElement("button");
      completeBtn.innerText = "âœ” Done";
      completeBtn.onclick = function () {
        taskText.classList.toggle("completed");
      };

      let editBtn = document.createElement("button");
      editBtn.innerText = "âœŽ Edit";
      editBtn.onclick = function () {
        let newTask = prompt("Edit your task:", taskInput.value);
        if (newTask !== null) {
          taskText.innerHTML = `${newTask} <br><small>${taskDateTime.value}</small>`;
        }
      };

      let deleteBtn = document.createElement("button");
      deleteBtn.innerText = "ðŸ—‘ Delete";
      deleteBtn.onclick = function () {
        li.remove();
      };

      btnDiv.appendChild(completeBtn);
      btnDiv.appendChild(editBtn);
      btnDiv.appendChild(deleteBtn);

      li.appendChild(btnDiv);
      taskList.appendChild(li);

      taskInput.value = "";
      taskDateTime.value = "";
    }
  </script>
</body>
</html>
