    }

    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }

    nav ul li {
      margin-left: 20px;
    }

    nav ul li a {
      text-decoration: none;
      color: white;
      padding: 8px 12px;
      transition: 0.3s;
    }

    nav ul li a:hover {
      background: #ff6600;
      border-radius: 5px;
    }

    /* Sections */
    section {
      height: 100vh;
      padding: 50px;
      color: white;
    }

    #home { background: #1abc9c; }
    #about { background: #3498db; }
